    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#9EA3FA" />

    <SEO />

    <title>{title}</title>

    <!-- preload fonts -->

    <link
      rel="preload"
      href="/fonts/SilkSerif-ExtraLight.woff2"
      as="font"
      type="font/woff2"
      crossorigin=""
    />
    <link
      rel="preload"
      href="/fonts/SilkSerif-Light.woff2"
      as="font"
